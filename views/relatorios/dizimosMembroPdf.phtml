	function tamanhoCelulas(&$celulas)
	{
		$total = 0;
		foreach ($celulas as $key => $celula)
			$total = $total + $celula[1];

		$retorna;

		foreach ($celulas as $key => $celula)
			$retorna[$key] = ($celula[1]*100)/$total;

		return $retorna;
